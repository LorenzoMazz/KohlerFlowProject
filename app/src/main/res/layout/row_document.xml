<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/padding_medium"
    android:layout_marginLeft="@dimen/padding_medium"
    android:layout_marginTop="@dimen/padding_medium"
    android:background="@color/white"
    android:clickable="true"
    android:foreground="@drawable/ripple_effect_blue"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_small"
        android:layout_marginTop="@dimen/padding_small"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_document_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="@dimen/padding_medium"
            android:text="Document 1"
            android:textColor="@color/dark_blue"
            android:textSize="@dimen/txt_xnormal" />

        <ImageView
            android:id="@+id/imageViewRevision"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/padding_small"
            app:srcCompat="@drawable/ic_revision" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/dark_blue"
        android:paddingBottom="@dimen/padding_small" />
</LinearLayout>