<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/a_dialog_bg"
    android:orientation="vertical">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/custom_alert_dialog_txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="@dimen/padding_medium"
        android:textAllCaps="true"
        android:textColor="@color/dark_blue"
        android:textSize="@dimen/txt_xnormal"
        android:textStyle="bold" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/custom_alert_dialog_txt_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/padding_mlarge"
        android:paddingLeft="@dimen/padding_mmlarge"
        android:paddingRight="@dimen/padding_mmlarge"
        android:paddingTop="@dimen/padding_mlarge"
        android:textColor="@android:color/black"
        android:textSize="@dimen/txt_normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_medium"
        android:layout_marginLeft="@dimen/padding_mlarge"
        android:layout_marginRight="@dimen/padding_mlarge"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/custom_alert_dialog_txt_btn_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/c_btn_blue"
            android:minHeight="0dp"
            android:paddingBottom="@dimen/padding_medium"
            android:paddingLeft="@dimen/padding_mlarge"
            android:paddingRight="@dimen/padding_mlarge"
            android:paddingTop="@dimen/padding_medium"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_normal" />

        <android.support.v4.widget.Space
            android:id="@+id/custom_alert_dialog_btn_space"
            android:layout_width="@dimen/padding_large"
            android:layout_height="1dp" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/custom_alert_dialog_txt_btn_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/c_btn_blue"
            android:minHeight="0dp"
            android:paddingBottom="@dimen/padding_medium"
            android:paddingLeft="@dimen/padding_mlarge"
            android:paddingRight="@dimen/padding_mlarge"
            android:paddingTop="@dimen/padding_medium"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_normal" />

    </LinearLayout>
</LinearLayout>