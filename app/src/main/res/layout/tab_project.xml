<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dark_blue"
    android:paddingBottom="@dimen/padding_small">


        <TextView
            android:id="@+id/title_sectioon_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iconTab"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/padding_x_small"
            android:layout_marginTop="@dimen/padding_x_small"
            android:text="Documenti"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_normal"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/iconTab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/padding_medium"
            android:paddingLeft="@dimen/padding_medium"
            android:paddingRight="@dimen/padding_medium"
            android:paddingTop="@dimen/padding_xx_small"
            android:src="@drawable/ic_assignment_white_24dp" />

        <com.nex3z.notificationbadge.NotificationBadge
            android:id="@+id/badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/iconTab"
            android:layout_alignTop="@id/iconTab"
            android:layout_marginRight="2dp"
            android:layout_marginTop="9dp"
            app:nbBackground="@drawable/badge_bg_with_shadow"
            app:nbMaxTextLength="2" />


</RelativeLayout>